@page "{category}"
@model MyPortfolio.Web.Pages.P.IndexModel
@{
    ViewData["Title"] = "My Experiences";
}

<div class="text-center py-4">
    @Html.Raw(Model.Posts[0].Content[0].Text)
</div>

@if (Model.Posts.Count > 0)
{
    @for (int i = 1; i < Model.Posts.Count; i++)
    {
<article class="bg-dark mb-3 px-3">
        @if (i % 2 == 1)
        {
    <div class="media py-3">
        <img class="mr-3" src="https://placehold.it/64x64" alt="Placeholder" />
        <div class="media-body">
            <h5 class="mt-0">@Model.Posts[i].Title</h5>
            @Html.Raw(Model.Posts[i].Content[0].Description)
        </div>
    </div>
    <a asp-page="/P/Details" asp-route-category="@Model.Posts[i].Category.Name" asp-route-id="@Model.Posts[i].Id" class="btn btn-sm btn-success float-left">Read More</a>
    <div class="mb-3" style="clear:both;"></div>
        }
        else
        {
    <div class="media py-3 text-right">
        <div class="media-body">
            <h5 class="mt-0">@Model.Posts[i].Title</h5>
            @Html.Raw(Model.Posts[i].Content[0].Description)
        </div>
        <img class="ml-3" src="https://placehold.it/64x64" alt="Placeholder" />
    </div>
    <a asp-page="/P/Details" asp-route-category="@Model.Posts[i].Category.Name" asp-route-id="@Model.Posts[i].Id"  class="btn btn-sm btn-success float-right">Read More</a>
    <div class="mb-3" style="clear:both;"></div>
        }
</article>
    }
}
else
{
    <p>No posts found</p>
}
